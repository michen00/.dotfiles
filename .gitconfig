[user]
	email = michael.chen@element.com
	name = Michael I Chen
	signingkey = ssh-ed25519 ...
[init]
	defaultBranch = main
[core]
	editor = code --wait
[pull]
	rebase = true
[alias]
	tree = log --graph --decorate --pretty=oneline --abbrev-commit

[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
[push]
	default = simple
	autoSetupRemote = true
